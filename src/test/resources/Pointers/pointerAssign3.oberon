MODULE pointerAssign;

TYPE
    profissao = RECORD
        nome : STRING;
        horas : INTEGER;
        salario : INTEGER;
        qtdVagas : INTEGER;
    END

VAR
    anuncio : POINTER TO profissao;

BEGIN
    anuncio.nome := "Cientista de dados";
    anuncio.horas := 8;
    anuncio.salario := 8700;
    anuncio.qtdVagas := 2

END

END pointerAssign.